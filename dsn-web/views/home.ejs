                            console.log('error');

            }
        );
    }
    function signUpButton(){
        var email = $('#email');
        var username_reg = $('#username_reg');
        var fullname_reg = $('#fullname_reg');
        var password_reg = $('#password_reg');
        signup(username_reg.val(),password_reg.val(),fullname_reg.val(),email.val(),
